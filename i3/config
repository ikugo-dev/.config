# FUNCTIONAL SETTINGS
# mod key, font
set $mod Mod4
set $scripts "
font pango:Iosevka Nerd Font 10

# STARTUP: i3, polybar, picom, wallpaper
exec --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id picom
exec --no-startup-id gammastep -l 43.19:21.55 -t 6000:4000
# change display + startup display
bindsym $mod+m exec --no-startup-id ~/Code/Scripts/i3/monitor-switch.sh
exec --no-startup-id sh -c "xrandr --output eDP-1 --off --output HDMI-1 --auto"

# change keyboard
exec_always setxkbmap \
                 -layout  us,colemak-dh-arts,rs,rs \
                 -variant basic,basic,latin,basic \
                 -option  'grp:win_space_toggle',caps:backspace \
# brightness
bindsym  XF86MonBrightnessUp    exec  --no-startup-id  brightnessctl  set  +5%
bindsym  XF86MonBrightnessDown  exec  --no-startup-id  brightnessctl  set  5%-

# lock the screen and dont make my screen black, hoe
bindsym $mod+l exec --no-startup-id ~/Code/Scripts/i3/lockscript.sh
exec --no-startup-id sh -c "sleep 1 && xset s off && sleep 1 && xset -dpms && sleep 1 && xset s noblank"

# turn off pc
bindsym $mod+Shift+x exec --no-startup-id ~/Code/Scripts/i3/exit-prompt.sh
bindsym $mod+Shift+z exec --no-startup-id ~/Code/Scripts/i3/reboot-prompt.sh

# emoji
bindsym $mod+Shift+d exec ~/Code/Scripts/i3/dmenu-emoji.sh

# audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status

# bluetooth control
bindsym $mod+b exec --no-startup-id sh -c "bluetoothctl power on && bluetoothctl connect E8:9E:13:EF:42:60"
bindsym $mod+Shift+b exec --no-startup-id sh -c "bluetoothctl disconnect && bluetoothctl power off"

# knob audio controls
bindsym XF86AudioMute exec --no-startup-id playerctl play-pause
bindsym $mod+Delete exec --no-startup-id playerctl stop
bindsym $mod+Next exec --no-startup-id playerctl next
bindsym $mod+Prior exec --no-startup-id playerctl previous

# screenshots
bindsym $mod+p exec --no-startup-id maim --hidecursor ~/Pictures/Screenshots/$(date +%Y-%m-%d-%H:%M:%S | tr A-Z a-z).png
bindsym $mod+Shift+p exec --no-startup-id maim --select ~/Pictures/Screenshots/$(date +%Y-%m-%d-%H:%M:%S | tr A-Z a-z).png

# terminal
bindsym $mod+Return exec kitty

# kill focused window
bindsym $mod+Shift+q kill

# launch apps
bindsym $mod+d exec --no-startup-id \
        dmenu_run -fn "Hurmit Nerd Font-12" \
            -nb "#0B0E14" -nf "#BFBDB6" -sb "#FF8F40" -sf "#0B0E14" \


# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

# split horizontaly or vertiacly
bindsym $mod+h split h
bindsym $mod+v split v

# toggle tiling / floating
bindsym $mod+Shift+e floating toggle

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
tiling_drag modifier titlebar

# define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "s1"
set $ws10 "s2"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Assign workspaces to displays
workspace $ws1  output HDMI-A-0
workspace $ws2  output HDMI-A-0
workspace $ws3  output HDMI-A-0
workspace $ws4  output HDMI-A-0
workspace $ws5  output HDMI-A-0
workspace $ws6  output HDMI-A-0
workspace $ws7  output HDMI-A-0
workspace $ws8  output HDMI-A-0
workspace $ws9  output eDP
workspace $ws10 output eDP

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"

set $resize_length 80 px
mode "resize" {
    bindsym  Left   resize  shrink  width   $resize_length
    bindsym  Down   resize  grow    height  $resize_length
    bindsym  Up     resize  shrink  height  $resize_length
    bindsym  Right  resize  grow    width   $resize_length
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# VISUAL SETTINGS
# wallpaper
exec_always --no-startup-id sh -c "feh --bg-max ~/.config/.wallpapers/italia.jpg"

# colors
set  $foreground     #BFBDB6
set  $background     #0B0E14
set  $background_alt #0F131A
set  $red            #D95757
set  $green          #7FD962
set  $yellow         #FF8F40
set  $blue           #39BAE6
set  $magenta        #D2A6FF
set  $cyan           #95E6CB
set  $gray           #636A72

#class                   border  backgr  text         indicator  child_border
client.focused           $blue   $blue   $background  $magenta   $gray
client.focused_inactive  $gray   $gray   $foreground  $magenta   $gray
client.unfocused         $gray   $gray   $foreground  $magenta   $gray
client.urgent            $red    $red    $foreground  $red       $red

# gaps
gaps inner 6
smart_gaps on
